{
  "name": "pega-html-reports",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "watch:scss": "node-sass -w styles/ -r --output-style expanded -o public/css/",
    "watch:server": "nodemon server.js",
    "build:docker": "docker build -t lcs-reports:latest .",
    "tag:docker": "docker tag lcs-reports:latest ansaries/lcs-reports:1.0.10",
    "push:docker": "docker push ansaries/lcs-reports:1.0.10",
    "dockerize": "npm run build:docker && npm run tag:docker && npm run push:docker",
    "build:deploy": "npm run dockerize && kubectl apply -f ./k8s.yaml -n pega23",
    "deploy": "kubectl apply -f ./k8s.yaml -n pega23",
    "preinstall": "npm install -g nodemon",
    "start": "nodemon server.js",
    "postinstall": "npm run start"
  },
  "author": "arslan.ansari@lowcodesol.com",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.7.2",
    "body-parser": "^1.20.2",
    "express": "^4.19.2",
    "express-handlebars": "^7.1.3",
    "node-sass": "^9.0.0",
    "nodemon": "^3.1.4",
    "orbitcss": "^2.0.0",
    "puppeteer": "^22.12.1"
  },
  "devDependencies": {
    "dotenv": "^16.4.5"
  }
}
