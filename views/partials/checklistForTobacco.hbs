{{#with ChecklistForTobacco}}
<section class="frow" id="checklist-for-tobacco">
    <div class="container-padding width-100">
        <div class="content">
            <div class="container centered mb-20">
                <h2 class="text-center m-auto">
                    ENCOUNTER CHECKLIST FOR TOBACCO
                </h2>
            </div>
            <table class="width-100">
                <col width="25%" />
                <col width="25%" />
                <col width="25%" />
                <col width="25%" />

                <tbody>
                    <tr>
                        <td colspan="2">
                            <div class="frow justify-start text-bold">
                                PLEASE ADVISE the patient/smoker to stop:
                            </div>
                            <div class="frow justify-start">
                                As your healthcare provider, I strongly advise you to quit
                                smoking. It's the single most important thing you can do
                                to protect your health, and I can help.
                            </div>
                            <div class="frow justify-start text-bold mt-10">
                                ASSESS readiness to quit:
                            </div>
                            <div class="frow justify-start">
                                <div class="col-1-2">
                                    <div class="cb">
                                        <label for="name">Patient is ready to quit</label>
                                    </div>
                                </div>
                                <div class="col-1-2">
                                    <span>Target quit date:</span>
                                    <span class="p-5 text-underline"> .. / .. / ....</span>
                                </div>
                            </div>
                            <div class="frow justify-start">
                                <div class="col-1-2">
                                    <div class="cb">
                                        <label for="name">
                                            Patient is thinking about quitting
                                        </label>
                                    </div>
                                </div>
                                <div class="col-1-2">
                                    <div class="cb">
                                        <label for="name">Brief counseling using 5 R's</label>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td colspan="2">
                            <table>
                                <tbody>
                                    <tr>
                                        <td>
                                            <span>Name:</span>
                                            <span class="p-5 text-underline">
                                               {{@root.SelectedPatientData.pyFullName}}
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <span>DOB:</span>
                                            <span class="p-5 text-underline">
                                                {{@root.SelectedPatientData.DateOfBirth}}
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <span>Encounter Dates:</span>
                                            <span class="p-5 text-underline">.. / .. / .....</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div class="frow justify-start gutters">
                                                <span>Visit #</span>
                                                <div class="cb">
                                                    <label for="name">1</label>
                                                </div>
                                                <div class="cb">
                                                    <label for="name">2</label>
                                                </div>
                                                <div class="cb">
                                                    <label for="name">3</label>
                                                </div>
                                                <div class="cb">
                                                    <label for="name">4</label>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="frow justify-start">
                <div class="col-1-1">
                    <span>Relevant Reasons:</span>
                    <span class="p-5 text-underline">..... reasons .....</span>
                </div>
            </div>
            <div class="frow justify-start">
                <div class="col-1-1">
                    <span>Risks:</span>
                    <span class="p-5 text-underline">..... risks .....</span>
                </div>
            </div>
            <div class="frow justify-start">
                <div class="col-1-1">
                    <span>Rewards:</span>
                    <span class="p-5 text-underline">..... rewards .....</span>
                </div>
            </div>
            <div class="col-1-1">
                <span>Quit smoking &lt;</span>
                <span class="p-5 text-underline">.....</span>
                <span>years ago</span>
            </div>
            <div class="col-1-1">
                <span>Smoked for </span>
                <span class="p-5 text-underline">.....</span>
                <span>years.</span>
            </div>
            <div class="frow justify-start gutters">
                <div class="cb">
                    <label for="name">Patient is not ready to quit</label>
                </div>
                <div class="cb">
                    <label for="name">Repetition relapse</label>
                </div>
            </div>
            <div class="frow justify-start text-bold mt-10">
                <span>ASSIST smoker to quit:</span>
            </div>
            <div class="frow justify-start">
                <div class="col-1-5">
                    <span>Smoking history:</span>
                </div>
                <div class="col-1-5">
                    <span class="p-5 text-underline">.....</span>
                    <span># of Cigarettes/Day</span>
                </div>
                <div class="col-1-5">
                    <span class="p-5 text-underline">.....</span>
                    <span># of Packs/Day</span>
                </div>
                <div class="col-1-5">
                    <span class="p-5 text-underline">.....</span>
                    <span># of Years</span>
                </div>
                <div class="col-1-5">
                    <span class="p-5 text-underline">.....</span>
                    <span># of Quit Attempts</span>
                </div>
            </div>
            <div class="frow justify-start">
                <div class="col-1-5">
                    <span>Household members:</span>
                </div>
                <div class="col-1-5">
                    <span class="p-5 text-underline">.....</span>
                    <span># of Smokers</span>
                </div>
                <div class="col-1-5">
                    <span class="p-5 text-underline">.....</span>
                    <span># of Non-smokers</span>
                </div>
                <div class="col-1-5">
                    <span class="p-5 text-underline">.....</span>
                    <span># of Children</span>
                </div>
            </div>
            <div class="frow justify-start gutters" style="margin-top: 15px;">
                 <div class="frow col-1-1 justify-start">
                    <strong class="col-1-7">SYMPTOMS:</strong>
                 </div>
                  {{#each @root.SelectedSmokingSymptoms}}
                  <div class="cb col-1-7">
                    {{> checkbox name=Symptoms IsChecked=IsChecked}}
                  </div>
                  {{/each}}
            </div>
            <div class="frow justify-start text-bold mb-10">MEDICATIONS:</div>
            <div class="frow justify-start gutters">
                <div class="col-1-6">
                    <span>Nicotine replacement therapy:</span>
                </div>
                 {{#each @root.SelectedNicotineReplacement}}
                  <div class="cb col-1-7">
                    {{> checkbox name=NicotineReplacementTherapy IsChecked=IsChecked}}
                  </div>
                  {{/each}}
            </div>
                
            <div class="frow justify-start gutters">
                <span>Bupropion SR:</span>
                <div class="cb">
                    <label for="name">
                        Tablets (Start 7 to 10 days before the target quit date.)
                    </label>
                </div>
            </div>
            <div class="frow justify-start mt-10">
                <span class="text-bold">ARRANGE Follow-up:</span>
            </div>
            <div class="frow justify-start gutters">
                <div class="cb">
                    <label for="name">"I'll check back with you by
                        <span class="p-5 text-underline">(.. / .. / ....) </span>
                        <span>." (Set within the first week after the target
                            quitdate)</span>
                    </label>
                </div>
            </div>
            <div class="frow justify-start gutters">
                <div class="cb">
                    <label for="name">"I'd like to give you some materials."</label>
                </div>
            </div>
            <div class="frow justify-start text-bold mt-20">
                <div class="col-1-3">
                    <span>Printed Name</span>
                    <span class="p-5 text-underline">...name...</span>
                </div>
                <div class="col-1-3">
                    <span>Signature</span>
                    <span class="p-5 text-underline">...signature...</span>
                </div>
                <div class="col-1-3">
                    <span>Date</span>
                    <span class="p-5 text-underline">.. / .. / ....</span>
                </div>
            </div>
        </div>
    </div>
</section>
{{/with}}