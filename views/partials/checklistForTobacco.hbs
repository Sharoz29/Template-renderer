{{#with ChecklistForTobacco}}
<section class="frow" id="checklist-for-tobacco">
    <div class="container-padding width-100">
        <div class="content">
            <div class="container centered mb-20">
                <h2 class="text-center m-auto">
                    ENCOUNTER CHECKLIST FOR TOBACCO
                </h2>
            </div>
            <table class="width-100">
                <col width="25%" />
                <col width="25%" />
                <col width="25%" />
                <col width="25%" />

                <tbody>
                    <tr>
                        <td colspan="2">
                            <div class="frow justify-start text-bold">
                                PLEASE ADVISE the patient/smoker to stop:
                            </div>
                            <div class="frow justify-start">
                                As your healthcare provider, I strongly advise you to quit
                                smoking. It's the single most important thing you can do
                                to protect your health, and I can help.
                            </div>
                            <div class="frow justify-start text-bold mt-10 mb-10">
                                ASSESS readiness to quit:
                            </div>
                            <div class="frow justify-start">
                                <div class="col-1-2">
                                    <div class="cb frow justify-start" style="gap:5px">
                                        <span class="cb">Patient is ready to quit: </span>
                                        {{> checkbox name="Yes" IsChecked=(checker IsPatientReadyToQuit "No")}}
                                        {{> checkbox name="No" IsChecked=(checker IsPatientReadyToQuit "No")}}
                                    </div>
                                </div>
                                <div class="col-1-2">
                                    <span>Target quit date:</span>
                                    <span class="p-5 text-underline">{{TargetQuitDate}}</span>
                                </div>
                            </div>
                            <div class="frow justify-start">
                                <div class="col-1-2">
                                    <div class="cb frow justify-start" style="gap:3px">
                                        <span class="cb">Patient is thinking about quitting: </span>
                                        {{> checkbox name="Yes" IsChecked=(checker IsPatientReadyToQuit "Yes")}}
                                        {{> checkbox name="No" IsChecked=(checker IsPatientThinkingAboutQuitting "No")}}
                                    </div>
                                </div>
                            </div>
                            <div class="col-1-1">
                                <div class="cb frow justify-start" style="gap:5px">
                                    <span class="cb">Brief counseling using 5 R's: </span>
                                    {{> checkbox name="Yes" IsChecked=(checker Is5RsCounselingRequired "Yes")}}
                                    {{> checkbox name="No" IsChecked=(checker Is5RsCounselingRequired "No")}}
                                </div>
                            </div>
                        </td>
                        <td colspan="2">
                            <table>
                                <tbody>
                                    <tr>
                                        <td>
                                            <span class="p-5">Name:</span>
                                            <span class="p-5 text-underline">
                                               {{@root.SelectedPatientData.pyFullName}}
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <span class="p-5">DOB:</span>
                                            <span class="p-5 text-underline">
                                                {{@root.SelectedPatientData.DateOfBirth}}
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <span class="p-5">Encounter Dates:</span>
                                            <span class="p-5 text-underline">{{@root.AppointmentInformation.EncounterDate}}.</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div class="frow justify-start gutters">
                                                <span>Visit #</span>
                                                <div class="cb">
                                                     {{> checkbox IsChecked=(radioButtonChecker @root.AppointmentInformation.VisitCount "1") name="1" }}
                                                </div>
                                                <div class="cb">
                                                     {{> checkbox IsChecked=(radioButtonChecker @root.AppointmentInformation.VisitCount "2") name="2" }}
                                                </div>
                                                <div class="cb">
                                                     {{> checkbox IsChecked=(radioButtonChecker @root.AppointmentInformation.VisitCount "3") name="3" }}
                                                </div>
                                                <div class="cb">
                                                     {{> checkbox IsChecked=(radioButtonChecker @root.AppointmentInformation.VisitCount "4") name="4" }}
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="frow justify-start">
                <div class="col-1-1">
                    <span class="p-5">Relevant Reasons:</span>
                    <span class="p-5 text-underline">{{RelevantReasons}}</span>
                </div>
            </div>
            <div class="frow justify-start">
                <div class="col-1-1">
                    <span class="p-5">Risks:</span>
                    <span class="p-5 text-underline">{{Risks}}</span>
                </div>
            </div>
            <div class="frow justify-start">
                <div class="col-1-1">
                    <span class="p-5">Rewards:</span>
                    <span class="p-5 text-underline">{{Rewards}}</span>
                </div>
            </div>
            <div class="col-1-1">
                <span class="p-5">Quit smoking &lt;</span>
                <span class="p-5 text-underline">{{QuitSmokingYears}}</span>
                <span>years ago</span>
            </div>
            <div class="col-1-1">
                <span class="p-5">Smoked for </span>
                <span class="p-5 text-underline">{{SmokedForYears}}</span>
                <span>years.</span>
            </div>
            <div class="frow justify-start gutters">
                <div class="cb frow" style="gap:5px">
                    <span class="cb" style="padding-left: 5px;">Patient is not ready to quit</span>
                     {{> checkbox name="Yes" IsChecked=(checker IsPatientNotReadyToQuit "Yes")}}
                     {{> checkbox name="No" IsChecked=(checker IsPatientNotReadyToQuit "No")}}
                </div>
                <div class="cb frow" style="gap:5px;">
                    <span class="cb" style="padding-left: 5px;">Repetition relapse</span>
                     {{> checkbox name="Yes" IsChecked=(checker RepetitionRelapse "Yes")}}
                     {{> checkbox name="No" IsChecked=(checker RepetitionRelapse "No")}}
                </div>
            </div>
            <div class="frow justify-start text-bold mt-10">
                <span>ASSIST smoker to quit:</span>
            </div>
            <div class="frow justify-start">
                <div class="col-1-5">
                    <span>Smoking history:</span>
                </div>
                <div class="col-1-5">
                    <span class="p-5 text-underline">{{CigarettesPerDay}}</span>
                    <span># of Cigarettes/Day</span>
                </div>
                <div class="col-1-5">
                    <span class="p-5 text-underline">{{CigarettesPacksPerDay}}</span>
                    <span># of Packs/Day</span>
                </div>
                <div class="col-1-5">
                    <span class="p-5 text-underline">{{SmokedForYears}}</span>
                    <span># of Years</span>
                </div>
                <div class="col-1-5">
                    <span class="p-5 text-underline">{{NumberOfQuitAttempts}}</span>
                    <span># of Quit Attempts</span>
                </div>
            </div>
            <div class="frow justify-start">
                <div class="col-1-5">
                    <span>Household members:</span>
                </div>
                <div class="col-1-5">
                    <span class="p-5 text-underline">{{NumberOfSmokersInFamily}}</span>
                    <span># of Smokers</span>
                </div>
                <div class="col-1-5">
                    <span class="p-5 text-underline">{{NumberOfNonSmokersInFamily}}</span>
                    <span># of Non-smokers</span>
                </div>
                <div class="col-1-5">
                    <span class="p-5 text-underline">{{NumberOfChildren}}</span>
                    <span># of Children</span>
                </div>
            </div>
            <div class="frow justify-start gutters" style="margin-top: 15px;">
                 <div class="frow col-1-1 justify-start">
                    <strong class="col-1-7">SYMPTOMS:</strong>
                 </div>
                  {{#each @root.SelectedSmokingSymptoms}}
                  <div class="cb col-1-7">
                    {{> checkbox name=Symptoms IsChecked=IsChecked}}
                  </div>
                  {{/each}}
            </div>
            <div class="frow justify-start text-bold mb-10">MEDICATIONS:</div>
            <div class="frow justify-start gutters">
                <div class="col-1-6">
                    <span>Nicotine replacement therapy:</span>
                </div>
                 {{#each @root.SelectedNicotineReplacement}}
                  <div class="cb col-1-7">
                    {{> checkbox name=NicotineReplacementTherapy IsChecked=IsChecked}}
                  </div>
                  {{/each}}
            </div>
                
            <div class="frow justify-start gutters">
                <span class="cb">Bupropion SR:</span>
                <div class="cb frow" style="gap:5px">
                    <span>Tablets (Start 7 to 10 days before the target quit date.)</span>
                    <div class="frow mt-5" style="gap:3px">
                        {{> checkbox name="Yes" IsChecked=(checker BupropionSRTablets "Yes")}}
                        {{> checkbox name="No" IsChecked=(checker BupropionSRTablets "No")}}
                     </div>
                </div>
            </div>
            <div class="frow justify-start mt-10">
                <span class="text-bold">ARRANGE Follow-up:</span>
            </div>
            <div class="frow justify-start gutters">
                <div class="cb frow mt-5" style="gap:5px">
                    <span class="cb">"I'll check back with you by."</span>
                    <span class="p-5 cb text-underline">{{TargetQuitDate}} </span>
                    <span class="cb">
                        (Set within the first week after the target quitdate)
                    </span>
                     {{> checkbox name="Yes" IsChecked=(checker QuitSmokingCheckBack "Yes")}}
                     {{> checkbox name="No" IsChecked=(checker QuitSmokingCheckBack "No")}}
                    </label>
                </div>
            </div>
            <div class="frow justify-start gutters">
                <div class="cb frow" style="gap:5px">
                    <span class="cb">"I'd like to give you some materials."</span>
                     {{> checkbox name="Yes" IsChecked=(checker QuitSmokingMaterials "Yes")}}
                     {{> checkbox name="No" IsChecked=(checker QuitSmokingMaterials "No")}}
                </div>
            </div>
            <div class="frow justify-start text-bold mt-20">
                <div class="col-1-3">
                    <span>Printed Name</span>
                    <span class="p-5 text-underline">{{@root.AppointmentInformation.SelectProvider}}</span>
                </div>
                <div class="col-1-3">
                    <span>Signature</span>
                    {{!-- <span class="p-5 text-underline">...signature...</span> --}}
                    {{> signature name="provider"}}
                </div>
                <div class="col-1-3">
                    <span>Date</span>
                    <span class="p-5 text-underline">{{@root.AppointmentInformation.SignatureDate}}</span>
                </div>
            </div>
        </div>
    </div>
</section>
{{/with}}