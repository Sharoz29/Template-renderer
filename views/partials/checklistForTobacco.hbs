{{#with ChecklistForTobacco}}
<section class="frow" id="checklist-for-tobacco">
    <div class="container-padding width-100">
        <div class="content">
            <div class="container centered mb-20">
                <h2 class="text-center m-auto">
                    ENCOUNTER CHECKLIST FOR TOBACCO
                </h2>
            </div>
            <table class="width-100">
                <col width="25%" />
                <col width="25%" />
                <col width="25%" />
                <col width="25%" />

                <tbody>
                    <tr>
                        <td colspan="2">
                            <div class="frow justify-start text-bold">
                                PLEASE ADVISE the patient/smoker to stop:
                            </div>
                            <div class="frow justify-start">
                                As your healthcare provider, I strongly advise you to quit
                                smoking. It's the single most important thing you can do
                                to protect your health, and I can help.
                            </div>
                            <div class="frow justify-start text-bold mt-10 mb-10">
                                ASSESS readiness to quit:
                            </div>
                            <div class="frow justify-start">
                                <div class="col-1-2">
                                    <div class="cb frow justify-start gutters">
                                        <span>Patient is ready to quit:</span>
                                        <span>
                                        {{> checkbox name="Yes" IsChecked=(checker IsPatientReadyToQuit "No")}}
                                        </span>
                                        <span>
                                        {{> checkbox name="No" IsChecked=(checker IsPatientReadyToQuit "No")}}
                                        </span>
                                    </div>
                                </div>
                                <div class="col-1-2">
                                    <span>Target quit date:</span>
                                    <span class="p-5 text-underline">{{TargetQuitDate}}</span>
                                </div>
                            </div>
                            <div class="frow justify-start">
                                <div class="col-1-1">
                                    <div class="cb frow justify-start gutters">
                                        <span>Patient is thinking about quitting: </span>
                                        {{> checkbox name="Yes" IsChecked=(checker IsPatientReadyToQuit "Yes")}}
                                        {{> checkbox name="No" IsChecked=(checker IsPatientThinkingAboutQuitting "No")}}
                                    </div>
                                </div>
                            </div>
                            <div class="col-1-1">
                                <div class="cb frow justify-start gutters">
                                    <span>Brief counseling using 5 R's: </span>
                                    <span>
                                    {{> checkbox name="Yes" IsChecked=(checker Is5RsCounselingRequired "Yes")}}
                                    </span>
                                    <span>
                                    {{> checkbox name="No" IsChecked=(checker Is5RsCounselingRequired "No")}}
                                    </span>
                                </div>
                            </div>
                        </td>
                        <td colspan="2">
                            <table>
                                <tbody>
                                    <tr>
                                        <td>
                                            <span>Name:</span>
                                            <span class="p-5 text-bold">
                                               {{@root.SelectedPatientData.pyFullName}}
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <span>DOB:</span>
                                            <span class="p-5 text-bold">
                                                {{@root.SelectedPatientData.DateOfBirth}}
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <span>Encounter Dates:</span>
                                            <span class="p-5 text-bold">{{@root.AppointmentInformation.EncounterDate}}.</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div class="frow justify-start gutters">
                                                <span>Visit #</span>
                                                <div class="cb">
                                                     {{> checkbox IsChecked=(radioButtonChecker @root.AppointmentInformation.VisitCount "1") name="1" }}
                                                </div>
                                                <div class="cb">
                                                     {{> checkbox IsChecked=(radioButtonChecker @root.AppointmentInformation.VisitCount "2") name="2" }}
                                                </div>
                                                <div class="cb">
                                                     {{> checkbox IsChecked=(radioButtonChecker @root.AppointmentInformation.VisitCount "3") name="3" }}
                                                </div>
                                                <div class="cb">
                                                     {{> checkbox IsChecked=(radioButtonChecker @root.AppointmentInformation.VisitCount "4") name="4" }}
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                </tbody>
            </table>

            <table>
                <col width="50%">
                <col width="50%">
                <tr>
                    <td colspan="2">
                        <span>Relevant Reasons:</span>
                        <span class="p-5 text-bold">{{RelevantReasons}}</span>
                        
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <span>Risks:</span>
                        <span class="p-5 text-bold">{{Risks}}</span>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <span>Rewards:</span>
                        <span class="p-5 text-bold">{{Rewards}}</span>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <span>Quit smoking &lt;</span>
                        <span class="p-5 text-bold">{{QuitSmokingYears}}</span>
                        <span>years ago</span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="cb">
                            Patient is ready to quit
                            <span class="ml-10">
                            {{> checkbox name="Yes" IsChecked=(checker IsPatientNotReadyToQuit "Yes")}}
                            </span>
                            <span class="ml-10">
                            {{> checkbox name="No" IsChecked=(checker IsPatientNotReadyToQuit "No")}}
                            </span>
                            
                        </div>
                    </td>
                    <td>
                        <div class="cb" style="padding-left: 5px;">
                            Repetition relapse
                            <span class="ml-10">
                            {{> checkbox name="Yes" IsChecked=(checker RepetitionRelapse "Yes")}}
                            </span>
                            <span class="ml-10">
                            {{> checkbox name="No" IsChecked=(checker RepetitionRelapse "No")}}
                            </span>
                        </div>
                    </td>
                </tr>
            </table>



