                <input type="checkbox" name="doctor-name" {{#if IsChecked}}checked{{/if}} />
                <label for="doctor-name">{{name}}</label>
              </div>
              {{/each}}
              <div class="md-id-container col-3-6">
                <span class="md-id">MD ID: Comes here...</span>
              </div>
            </div>
