{{#with MedicalRecord}}
<section class="frow" id="medication-recon">
  <div class="container-padding width-100">
    <div class="content">
      <div class="container centered mb-20">
        {{> formTitle ..}}
      </div>

      <div class="medication info">
        <table class="width-100">
          <col width="25%">
          <col width="25%">
          <col width="25%">
          <col width="25%">
          
          <tr>
            <td colspan="4">
              <span>Phone:</span>
              <span class="p-5 text-bold">{{@root.PatientDataEmbed.CellPhone}}</span>
            </td>            
          </tr>
          <tr>            
            <td colspan="2">
              <span>HEIGHT:</span>
              <span class="p-5 text-bold">{{@root.InitialAssessmentForm.HT}}</span>
            </td>
            <td colspan="2">
              <span>WEIGHT:</span>
              <span class="p-5 text-bold">{{@root.InitialAssessmentForm.WT}}</span>
            </td>
          </tr>
          <tr>
            <td colspan="2">
              <div class="frow justify-start gutters">
                
                  <div class="cb">
                    {{!-- {{> checkbox name="Yes" IsChecked=(checker ReviewedForContrainedications "")}} --}}
                    {{> checkbox IsChecked=(isTrue REVIEWEDFORCONTRAINDICATIONS) name="REVIEWED FOR CONTRAINDICATIONS" }}
                  </div>
                  {{!-- <div class="cb">
                    {{> checkbox name="No" IsChecked=(checker ReviewedForContrainedications "No")}}
                  </div>               --}}
              </div>
            </td>
            <td colspan="2">
              <div class="frow justify-start gutters">
                {{!-- <span>REVIEWED FOR INTERACTIONS:</span> --}}
                <div class="cb">
                  {{> checkbox IsChecked=(isTrue REVIEWEDFORINTERACTIONS) name="REVIEWED FOR INTERACTIONS" }}                  
                </div>                
              </div>
            </td>
          </tr>
          <tr>
            <td>
              <span>PHARMACY NAME:</span>
            </td>              
            <td colspan="3">
              <span class="p-l text-bold">{{PHARMACYNAME}}</span>
            </td>
          </tr>
          <tr>
            <td>
              <span>ADDRESS:</span>
              
            </td>
            <td colspan="3">
              <span class="p-l text-bold">{{PHARMACYADDRESS}}</span>
            </td>
          </tr>
          <tr>
            <td>
              <span>PHONE:</span>
              
            </td>
            <td colspan="3">
              <span class="p-l text-bold">{{PHARMACYPHONE}}</span>
            </td>
          </tr>
        </table>

          <!-- Rest... -->

          <table class="striped width-100">
            <thead>
              <tr>
                <th>Prescribed Medications</th>
                <th>DOSE</th>
                <th>ROUTE</th>
                <th>FREQUENCY</th>
                <th>PURPOSE</th>
                <th>REFILLS</th>
              </tr>
            </thead>
            <tbody>
              {{#if MEDICATIONSMR}}
              {{#each MEDICATIONSMR}}
              <tr>
                <td>{{MedicineList}}</td>
                <td>{{DOSE}}</td>
                <td>{{ROUTE}}</td>
                <td>{{FREQUENCY}}</td>
                <td>{{PURPOSE}}</td>
                <td>{{REFILLS}}</td>
              </tr>
              {{/each}}
              {{else}}
              <tr>
                <td>&nbsp</td>
                <td>&nbsp</td>
                <td>&nbsp</td>
                <td>&nbsp</td>
                <td>&nbsp</td>
                <td>&nbsp</td>
              </tr>
              {{/if}}
            </tbody>
          </table>

      </div>
    </div>
  </div>
</section>
{{/with}}