        </div>
        {{!-- {{/each}} --}}
        <div class="md-id-container col-3-6 fz-18">
          <span class="md-id"><strong>NPI ID: {{@root.AppointmentDetails.OperatorDataMD.NPIID}}</strong></span>
        </div>
      </div>
