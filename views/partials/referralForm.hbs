                  <input type="checkbox" name="doctor-name"  <pega:when java=<% tools.getProperty("DoctorsValues.pxResults").
                  contain("$THIS.pyDoctorName") %>>
                  checked
                  </pega:when> />
                  <label for="doctor-name"
                    ><pega:reference name="$THIS.pyDoctorName"
