          <div class="mds p-10 mb-10 mb-20 ba">
            <div class="frow">
              {{!-- {{#each doctors}} --}}
              <div class="checkbox-container col-6-12">
                <span class="md-id fz-18"><strong>{{@root.SelectMD}}</strong></span>
              </div>
              {{!-- {{/each}} --}}
              <div class="md-id-container col-3-6 fz-18">
                <span class="md-id"><strong>MD ID: Comes here...</strong></span>
              </div>
            </div>
