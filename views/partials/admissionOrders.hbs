{{#with AdmissionOrders}}
<section class="frow" id="admission-orders">
  <div class="container-padding width-100">
    <div class="container mb-20">
      <h2 class="text-center m-auto">Admission Orders</h2>
    </div>
    <div class="new-medications ba">
      <div class="frow container p-10 ba">
        <div class="frow col-5-12">
          <span class="text-uppercase col-3-6">New Medications</span>
          <div class="col-3-6">
            <input type="checkbox" name="spanish" id="spanish" />
            <label for="spanish">Spanish Translation</label>
          </div>
        </div>
      </div>
      <table class="striped width-100">
        <thead>
          <tr>
            <th>#</th>
            <th>Date</th>
            <th>Medication</th>
            <th>Dose</th>
            <th>Route</th>
            <th>Frequency</th>
            <th>Purpose</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>1</td>
            <td>Date</td>
            <td>Meds</td>
            <td>Dos</td>
            <td>Rout</td>
            <td>Freq</td>
            <td>Purpose</td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="treatment-orders ba">
      <div class="frow container p-10 ba">
        <div class="frow col-6-12">
          <span class="text-center col-3-6">Treatment Orders</span>
        </div>
      </div>
      <table class="striped width-100">
        <col width="16.6%">
        <col width="16.6%">
        <col width="16.6%">
        <col width="16.6%">
        <col width="16.6%">
        <col width="16.6%">
        <tbody>
          <tr>
            <td colspan="6">
              {{> checkbox IsChecked=Discontinue name="Discontinue" }}
              
            </td>
          </tr>
          <tr>
            <td colspan="6">
              {{> checkbox IsChecked=RefillMedications name="Refill Medications" }}
            </td>
          </tr>
          <tr>
            <td colspan="6"></td>
          </tr>
          <tr>
            <td colspan="1">
              <span>DIET</span>
            </td>
            <td colspan="5">
              <div class="frow cbs justify-start gutters">
                {{#each @root.SelectedPatientDiets}}
                {{> checkbox IsChecked=IsChecked name=DietName }}
                {{/each}}
              </div>
            </td>
          </tr>
          <tr>
            <td colspan="1">
              <span>DME</span>
            </td>
            <td colspan="5">
              <div class="frow cbs justify-start gutters">
                <div class="frow cbs justify-start gutters">
                {{#each @root.SelectedPatientsDME}}
                {{> checkbox IsChecked=IsChecked name=DMEName }}
                {{/each}}
              </div>
              </div>
            </td>
          </tr>
          
          <tr>
            <td colspan="1">
              <span>SUPPLIES</span>
            </td>
            <td colspan="5">
              <div class="frow cbs justify-start gutters">
                <div class="frow cbs justify-start gutters">
                {{#each @root.SelectedPatientSupplies}}
                {{> checkbox IsChecked=IsChecked name=SuppliesName }}
                {{/each}}
              </div>
              </div>
            </td>
          </tr>
          <tr>
            <td colspan="6" class="ba">
              <div class="frow">
                <span>Refer To:</span>
              </div>
            </td>
          </tr>
          <tr>
            <td>
              <div class="cb">
                <input type="checkbox" name="hhdueto" id="hhdueto" />
                <label for="hhdueto">Home Health Due To:</label>
              </div>
            </td>
            <td colspan="5">
              <div class="frow justify-start">
                <div class="frow col-6-6 justify-start gutters">
                  <span>Name of Health Agency:</span>
                  <span>...</span>
                </div>
                <div class="frow col-6-6 justify-start gutters">
                  <span>Name of Hospice Agency:</span>
                  <span>...</span>
                </div>
              </div>
            </td>
          </tr>
          <tr>
            <td>
              <div class="cb">
                <input type="checkbox" name="cardio" />
                <label for="cardio">Cardiology</label>
              </div>
            </td>
            <td colspan="5">
              <div class="frow justify-start">
                <div class="frow col-2-6 justify-start gutters">
                  <span>Name</span>
                  <span>...</span>
                </div>
                <div class="frow col-2-6 justify-start gutters">
                  <span>Tel:</span>
                  <span>...</span>
                </div>
                <div class="frow col-2-6 justify-start gutters">
                  <span>Location:</span>
                  <span>...</span>
                </div>
              </div>
            </td>
          </tr>
          <tr>
            <td>
              <div class="cb">
                <input type="checkbox" name="woundc" id="woundc" />
                <label for="woundc">Wound Care</label>
              </div>
            </td>
            <td colspan="5">
              <div class="frow justify-start">
                <div class="frow col-2-6 justify-start gutters">
                  <span>Name</span>
                  <span>...</span>
                </div>
                <div class="frow col-2-6 justify-start gutters">
                  <span>Tel:</span>
                  <span>...</span>
                </div>
                <div class="frow col-2-6 justify-start gutters">
                  <span>Location:</span>
                  <span>...</span>
                </div>
              </div>
            </td>
          </tr>
          <tr>
            <td>
              <div class="frow justify-start gutters">
                <div class="col-3-6 cb">
                  <input type="checkbox" name="cardio" />
                  <label for="cardio">Surgery</label>
                </div>
                <div class="col-3-6 procedure">
                  <span>Procedure:</span>
                  <span>...</span>
                </div>
              </div>
            </td>
            <td colspan="5">
              <div class="frow justify-start">
                <div class="frow col-2-6 justify-start gutters">
                  <span>Name</span>
                  <span>...</span>
                </div>
                <div class="frow col-2-6 justify-start gutters">
                  <span>Tel:</span>
                  <span>...</span>
                </div>
                <div class="frow col-2-6 justify-start gutters">
                  <span>Location:</span>
                  <span>...</span>
                </div>
              </div>
            </td>
          </tr>
          <tr>
            <td>
              <div class="cb">
                <input type="checkbox" name="painsp" />
                <label for="painsp">Pain Specialist</label>
              </div>
            </td>
            <td colspan="5">
              <div class="frow justify-start">
                <div class="frow col-2-6 justify-start gutters">
                  <span>Name</span>
                  <span>...</span>
                </div>
                <div class="frow col-2-6 justify-start gutters">
                  <span>Tel:</span>
                  <span>...</span>
                </div>
                <div class="frow col-2-6 justify-start gutters">
                  <span>Location:</span>
                  <span>...</span>
                </div>
              </div>
            </td>
          </tr>
          <tr>
            <td>
              <div class="cb">
                <input type="checkbox" name="orthop" id="orthop" />
                <label for="orthop">Orthopaedic</label>
              </div>
            </td>
            <td colspan="5">
              <div class="frow justify-start">
                <div class="frow col-2-6 justify-start gutters">
                  <span>Name</span>
                  <span>...</span>
                </div>
                <div class="frow col-2-6 justify-start gutters">
                  <span>Tel:</span>
                  <span>...</span>
                </div>
                <div class="frow col-2-6 justify-start gutters">
                  <span>Location:</span>
                  <span>...</span>
                </div>
              </div>
            </td>
          </tr>
          <tr>
            <td colspan="6" class="ba">
              <div class="frow">
                <span>Laboratory and Diagnostics</span>
              </div>
            </td>
          </tr>
          <tr>
            <td colspan="6">
              <div class="frow cbs justify-start">
                {{#each @root.SelectedPatientsLabDx}}
                  <div class="cb-table col-1-3">
                    {{> checkbox IsChecked=IsChecked name=LabDxName }}
                  </div>
                {{/each}}
              </div>
            </td>
          </tr>
          
        </tbody>
      </table>
    </div>

    <div class="signatures mt-60 mb-10">
      <div class="frow provider justify-start mb-60">
        <div class="frow title col-6-12 justify-start">
          <div class="col-4-12">
            <span> Provider Name: </span>
          </div>
          <div class="col-8-12">
            <span class="name text-underline px-30">Name</span>
          </div>
        </div>
        <div class="signature col-6-12 bb">
          Signature:
          <!-- <img class="signature-img" src="./logo/ferroli.png" alt="psig" /> -->
        </div>
        <div class="frow date col-6-12 justify-start">
          <div class="col-4-12">
            <span> Date: </span>
          </div>
          <div class="col-8-12">
            <span class="name text-underline px-30">Date here</span>
          </div>
        </div>
      </div>
      <div class="frow medical-provider justify-start">
        <div class="frow title col-6-12">
          <div class="col-4-12">
            <span> Physician Name: </span>
          </div>
          <div class="col-8-12">
            <span class="name text-underline px-30">Name</span>
          </div>
        </div>
        <div class="signature col-6-12 bb">
          Signature:
          <!-- <img class="signature-img" src="./logo/ferroli.png" alt="psig" /> -->
        </div>
        <div class="frow date col-6-12">
          <div class="col-4-12">
            <span> Date: </span>
          </div>
          <div class="col-8-12">
            <span class="name text-underline px-30">Date here</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{{/with}}