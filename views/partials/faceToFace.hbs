  
  {{#with MedicalRecord}}

  <section class="frow" id="{{F2FTMText .}}">
        <div class="container-padding width-100">
          <div class="content">
            <div class="container centered mb-20">
              
               <div class="frow">
                <h2 class="m-auto">
                  {{F2FTMText @root}} Encounter
                </h2>
              </div>
              


            </div>
            <div class="frow">
              <div class="frow col-1-2 justify-start gutters">
                <strong>Home Health:</strong>
                <span><strong>{{@root.ReferralAgencyEmbed.ReferralAgencyName}}</strong></span>
              </div>
              <div class="frow col-1-2 justify-start gutters">
                <strong>Date of Service:</strong>
                <span><strong>{{{formatDate @root.AppointmentDetails.DateOfService}}}</strong></span>
              </div>
            </div>

            <div>
              <p>
               {{stringToHTML @root  @root.EncounterCertification2}}
              </p>
            </div>

            {{!-- <div class="frow justify-start">
              <div class="frow col-1-3 justify-start gutters">
                <strong>Month</strong>
                <span>{{extractDatePart @root.AppointmentDetails.DateOfService "month"}}</span>
              </div>
              <div class="frow col-1-3 justify-start gutters">
                <strong>Day</strong>
                <span>{{extractDatePart @root.AppointmentDetails.DateOfService "day"}}</span>
              </div>
              <div class="frow col-1-3 justify-start gutters">
                <strong>Year</strong>
                <span>{{extractDatePart @root.AppointmentDetails.DateOfService "year"}}</span>
              </div>
            </div> --}}

            <div class="mt-10 no-mpa">
                <strong>Reason for Homebound: </strong>
                <span>{{{@root.ReasonForHomebound}}}</span>
            </div>

            <div class="mt-20">

           
              <span>
{{stringToHTML @root @root.ClinicalSummaryOfFindingsFromFaceToFaceEncounterInSupportOfHomeH}}
              </span>
            </div>  

            <div class="mt-20">
              <span>
           {{stringToHTML @root @root.MedicalConditionRelatedToHomeHealthServices}}
              </span>
            </div>
           <table class="striped width-100 mt-10 no-padding">
            <col width="25%" />
            <col width="25%" />
            <col width="25%" />
            <col width="25%" />
            <tbody>
              {{#splitArrayByNumber (mapCheckedItems MedicalConditionHHS MedicalConditionRelatedToHomeHealthServices) 4}}
              <tr>
                 {{#each chunk}}
                 <td>
                    <div class="cb">
                      {{> checkbox name=Name IsChecked=IsChecked}}
                    </div>
                  </td>
                {{/each}}
                {{#if $last}}
                  <td colspan="3">
                    <div class="frow justify-start no-mpa">
                      <div class="cb items-end">
                        {{> checkbox IsChecked=../OtherMedicalConditionsOnFaceToFaceCheckbox name='Others: ' }}
                        <span class="pl-5 text-bold">{{{../OtherMedicalConditionsOnFaceToFaceTextbox}}}</span>
                      </div>
                     
                    </div>
                  </td>
                {{/if}}
              </tr>
              {{/splitArrayByNumber}}
              
              </tbody>
            </table>
            <div class="mt-20">
              <p>
           {{@root.HomeBoundDueTo}}
              </p>
            </div>

           <table class="striped width-100 no-padding mt-10">
            <col width="25%" />
            <col width="25%" />
            <col width="25%" />
            <col width="25%" />
            <tbody>
                {{#splitArrayByNumber (mapCheckedItems HomeBoundDueToEmbed HomeboundDueTo) 4}}
                <tr>
                  {{#each chunk}}
                   <td  style="width: 25%;">
                      <div class="cb">
                        {{> checkbox name=Name IsChecked=IsChecked}}
                      </div>
                    </td>
                  {{/each}}
                </tr>
                {{/splitArrayByNumber}}
                <tr>
                  <td colspan="4">
                    <div class="cb">
                      {{> checkbox IsChecked=OtherHomeboundBool name='Others: '}}
                      <span class="pl-5 text-bold margin-remover">{{{OtherHomeboundTextbox}}}</span>
                    </div>
                  </td>
                </tr>
            </tbody>
          </table>
            <div class="mt-20">
                              
              <span>
                {{stringToHTML @root @root.CertificateOfHomeboundStatus}}
              </span>
            </div>

            <table class="striped width-100 no-padding mt-10">
              <col width="25%" />
              <col width="25%" />
              <col width="25%" />
              <col width="25%" />
              <tbody>
                {{#splitArrayByNumber (mapCheckedItems HomeboundStatusEmbed CertificateOfHomeboundStatus) 4}}
                <tr>
                  {{#each chunk}}
                   <td  style="width: 25%;">
                    <div class="cb">
                      {{> checkbox name=Name IsChecked=IsChecked}}
                    </div>
                  </td>
                  {{/each}}
                {{/splitArrayByNumber}}
                  <td>
                    <div class="cb">
                      {{> checkbox IsChecked=OtherHomeboundStatusBool name='Others: '}}
                      <span class="pl-5 text-bold margin-remover">{{{OtherHomeboundStatusTextbox}}}</span>
                    </div>
                  </td>
                </tr>
              </tbody>
            </table>
            
            <div class="frow justify-start">
              {{#if isTM}}
                <p>
                  I,<span class="p-5 text-underline text-bold">{{@root.AppointmentInformation.OperatorData.pyUserName}}</span>, conducted a visit utilizing end-to-end encrypted
                  software featuring 2-way audiovisual telecommunications in real time.
                  This type of visit was conducted at the request of patient, <span class="p-5 text-underline text-bold">{{@root.AppointmentInformation.PatientData.pyFullName}}</span>,
                  and he/she consented to the visit during the scheduling of the visit as well as during the visit.</p>
                <p>I certify that this patient is confined to his/her home and that he/she can benefit from Homehealth services.</p>
              {{/if}}
            </div>

             {{> doubleSignatures}}
          </div>
        </div>
  </section>
{{/with}}