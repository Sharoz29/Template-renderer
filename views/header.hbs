<div
  style="font-size:10px; display:flex; flex-wrap:wrap; justify-content: space-between; align-items: center; width: calc(100% - 40px); margin: 5px 20px; color: #666"
>

  <div style="flex: 1 1 34%; justify-content: flex-start;">
    <img
      style="min-height: 60px; max-height: 60px"
      src="{{officeLogo}}"
      alt="kk"
    />

  </div>

  <div style="flex: 1 1 33%; justify-self:center; text-align:center;">
    <div>
      <b><span>
          {{PatientData.pyFullName}}
          --
          {{PatientData.PatAccountID}}
        </span>
      </b>
    </div>
    <div>
      Date of Birth:
      <b><span>
          {{formatDate PatientData.pxCreateDateTime}}
        </span></b>
    </div>
    <div>
      <span>
        Date of Service:
        <b>{{formatDate PatientData.pxCommitDateTime}}</b>
      </span>
    </div>
  </div>

  <div style="flex: 1 1 33%; justify-self:flex-end; text-align:end;">
    <div><b>{{OfficeName}}</b></div>
    <div>
      <b>Office Address Line 1, Comes Here...</b>
    </div>
    <div>
      <b>Tel: 132 124 1222</b>
    </div>
  </div>

</div>